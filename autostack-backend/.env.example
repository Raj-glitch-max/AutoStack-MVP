# Database Configuration (SQLite for local development)
DATABASE_URL=sqlite+aiosqlite:///./autostack.db

# JWT Configuration
SECRET_KEY=your-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRES_DAYS=7

# Frontend/Backend URLs (for local development)
FRONTEND_URL=http://localhost:3000
FRONTEND_ADDITIONAL_ORIGINS=http://localhost:5173,http://localhost:3000
BACKEND_URL=http://localhost:8000

# GitHub OAuth (Get from https://github.com/settings/developers)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:8000/auth/github/callback
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Google OAuth (Get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:8000/auth/google/callback

# Deployment Settings
AUTOSTACK_DEPLOY_DIR=./deployments
DOCKER_ENABLE=true
KUBERNETES_ENABLE=false

# Jenkins (Optional)
JENKINS_URL=http://jenkins:8080
JENKINS_USER=
JENKINS_API_TOKEN=
JENKINS_JOB_NAME=
JENKINS_ENABLE=false

# Email Settings (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_FROM=autostack@example.com
